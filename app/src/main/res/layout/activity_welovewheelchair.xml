<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boonim.welovewheelchair.welovewheelchair">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/we"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/imageView2"
            android:src="@drawable/vee" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รถวีลแชร์"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/imageView"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/car" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="การเดินทาง"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="320dp"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout2">

        <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/imageView4"
            android:src="@drawable/buy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ร้านค้า"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/imageView5"
            android:nestedScrollingEnabled="false"
            android:src="@drawable/gogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สถานที่ท่องเที่ยว"
            android:id="@+id/textView4"
            android:layout_weight="0.05"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>
